extends ../../layouts/layout.pug

block banner
  #post-header.page-header
    .page-header-bg(style="background-image: url('/img/header-1.jpg');" data-stellar-background-ratio='0.5')
    .container
      .row
        .col-md-10
          .post-category
            a(href=`/category/${news.category_id}`) #{categories.find(category => category.id === news.category_id).category_name}
          h1 #{news.newspaper_title}
          ul.post-meta
            li
              a(href='#') #{authors.find(author => author.id === news.author_id).author_name}
            li #{news.newspaper_date.toDateString()}
            li
              i.fa.fa-comments
              |  3
            li
              i.fa.fa-eye
              |  #{news.newspaper_view}

block content
  // post share
  .section-row
    .post-share
      a.social-facebook(href='#')
        i.fa.fa-facebook
        span Share
      a.social-twitter(href='#')
        i.fa.fa-twitter
        span Tweet
      a.social-pinterest(href='#')
        i.fa.fa-pinterest
        span Pin
      a(href='#')
        i.fa.fa-envelope
        span Email
  // /post share
  // post content
  .section-row
    h1.post-title #{news.newspaper_title}
    figure.pull-right
      img(src=news.newspaper_imgae alt='post-img')
      figcaption #{news.newspaper_title}
    div.content !{news.newspaper_content}
  
  // post tags
  .section-row
    .post-tags
      ul
        li TAGS:
        li
          a(href=`/category/${news.category_id}`) #{categories.find(category => category.id === news.category_id).category_name}

  // related post
  div
    .section-title
      h3.title Related Posts
    .row
      // post
      each news in relativeNews
        .col-md-4
          .post.post-sm
            a.post-img(href=`/news/${news.slug}`)
              img(src=news.newspaper_imgae alt='post-img')
            .post-body
              .post-category
                a(href=`/category/${news.category_id}`) #{categories.find(category => category.id === news.category_id).category_name}
              h3.post-title.title-sm
                a(href=`/news/${news.slug}`) #{news.newspaper_title}
              ul.post-meta
                li
                  a(href='author.html') #{authors.find(author => author.id === news.author_id).author_name}
                li #{news.newspaper_date.toDateString()}